{
    "name": "nids-cdd",
    "dockerComposeFile": [
      "./compose.yml" // Docker Composeファイルを指定
    ],
    "service": "dev",  // 開発用に使用するサービスを指定
    "workspaceFolder": "/home",  // コンテナ内での作業ディレクトリ
    "containerEnv": {
      "PYTHONPATH": "/usr/local/bin/python3"
    },
    // コンテナ作成後に依存関係をインストール
    "postCreateCommand": "pip install -r .devcontainer/requirements.txt"
  }
