{
  "name": "nids-cdd",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/home/murasemaru/nids-cdd",
  "remoteUser": "murasemaru",
  "runArgs": [
    "--name=nids-cdd"
  ],
  "mounts": [{
      "type": "bind",
      "source": "${localEnv:USERPROFILE}/traffic_data",
      "target": "/${containerWorkspaceFolder}/src/main/traffic_data"
    }],
  "postCreateCommand": [
    "echo \"${localEnv:USERPROFILE}/.git-credentials\" > /home/murasemaru/.git-credentials"
  ]
}


