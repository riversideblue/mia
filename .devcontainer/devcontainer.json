{
    "name": "nids-cdd",
    "dockerComposeFile": [
      "./compose.yml" // Docker Composeファイルを指定
    ],
    "mounts": [
      "source=${localEnv:HOME}/.git-credentials,target=/root/.git-credentials,type=bind"
    ],
    "service": "dev",  // 開発用に使用するサービスを指定
    // コンテナ作成後に依存関係をインストール
    "postCreateCommand": "pip install -r .devcontainer/requirements.txt"
  }
