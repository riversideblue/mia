{
    "name": "nids-cdd",
    "build": {
      "dockerfile": "Dockerfile",
      "context": ".."
    },
    "runArgs": [
      "--name=nids-cdd"
    ],
    "workspaceFolder": "/home/murasemaru/nids-cdd",
    "mounts": [{
      "type": "bind",
      "source": "${localEnv:USERPROFILE}/traffic_data",
      "target": "/${containerWorkspaceFolder}/src/main/traffic_data"
    },{
      "type": "bind",
      "source": "${localEnv:USERPROFILE}/.git-credentials",
      "target": "/home/murasemaru/.git-credentials"
    }],
    "postCreateCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}"
}

