{
    "name": "nids-cdd",
    "dockerComposeFile": [
      "./compose.yml" // Docker Composeファイルを指定
    ],
    "service": "dev",  // 開発用に使用するサービスを指定
    // コンテナ作成後に依存関係をインストール
    "onCreateCommand": "dos2unix /root/.git-credentials",
    "postCreateCommand": "pip install -r .devcontainer/requirements.txt",
    "postStartCommand": "git config --global credential.helper store"
  }
