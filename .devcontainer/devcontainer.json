{
  "name": "nids-cdd",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/home/murasemaru/nids-cdd",
  "remoteUser": "murasemaru",
  "runArgs": [
    "--name=nids-cdd"
  ],
  "mounts": [
    {
      "type": "bind",
      "source": "${localEnv:USERPROFILE}/nids-cdd/data",
      "target": "/${containerWorkspaceFolder}/data"
    },{
      "type": "bind",
      "source": "${localEnv:USERPROFILE}/nids-cdd/exp",
      "target": "/${containerWorkspaceFolder}/exp"
    },{
      "type": "bind",
      "source": "${localEnv:USERPROFILE}/nids-cdd/other",
      "target": "/${containerWorkspaceFolder}/other"
    },{
      "type": "bind",
      "source": "${localEnv:USERPROFILE}/.git-credentials",
      "target": "/tmp/.git-credentials"
    }
  ],
  "postStartCommand": "cp /tmp/.git-credentials /home/murasemaru/.git-credentials &&  dos2unix -n /home/murasemaru/.git-credentials /home/murasemaru/.git-credentials && chown murasemaru:murasemaru /home/murasemaru/.git-credentials && chmod 600 /home/murasemaru/.git-credentials",
  "postAttachCommand": "git config --global user.name murasemaru  && git config --global user.email bp21071@shibaura-it.ac.jp && git config --global credential.helper store && git config --global --add safe.directory ${containerWorkspaceFolder}"
}


