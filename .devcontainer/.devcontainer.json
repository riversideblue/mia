{
    "name": "My Project Dev Container",
    "dockerComposeFile": "docker-compose.yml",  // Docker Composeファイルを指定
    "service": "dev",  // 開発用に使用するサービスを指定
    "workspaceFolder": "/workspace",  // コンテナ内での作業ディレクトリ
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",  // Python開発用拡張機能
          "ms-azuretools.vscode-docker",  // Docker用拡張機能
          "eamodio.gitlens",  // Git用拡張機能
          "mhutchie.git-graph"  // Git Graph拡張機能（オプション）
        ]
      }
    },
    "remoteUser": "dev-user"  // コンテナ内で使用するユーザー
  }
  